<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chit Chat</title>
    <link rel="stylesheet" href="/css/output.css">
    <!-- FontAwesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="container mx-auto rounded-lg min-h-screen">
        <% if (locals.error) { %>
            <p class="text-red-500  text-xs italic">
                <%= error %>
            </p>
            <% } %>
                <%- include('includes/header.ejs',{profileImg:profile.profile.profileImg}) %>
                    <!-- Chatting -->
                    <div class="flex items-stretch justify-between bg-white">
                        <%- include('includes/chatList.ejs',{contacts: profile.contacts}) %>
                            <%- include('includes/chat.ejs' , {user: user }) %>
                    </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // document.addEventListener("DOMContentLoaded", () => {
        //     window.scrollTo(0, document.body.scrollHeight)
        // });
        const socket = io()
        const message = document.querySelector('.message');
        const send = document.querySelector('.send');
        const messages = document.querySelector(".chats")

        socket.emit("join", `<%=profile.email%>`)
        send.addEventListener('click', (e) => {
            e.preventDefault()
            messages.innerHTML += `
            <div class="flex justify-end mb-4">
                <div class="mr-2 py-3 px-4 bg-blue-400 rounded-bl-3xl rounded-tl-3xl rounded-tr-xl text-white">
                    ${message.value}
                </dv>
            </div>
            `
            socket.emit("private", {
                msg: message.value,
                sendTo: `<%=user.email%>`,
                sentBy: `<%=profile.email%>`
            })
            message.value=""
        });
        socket.on("private", (msg) => {
            messages.innerHTML += `
            <div class="flex justify-start mb-4">
                <div class="ml-2 py-3 px-4 bg-gray-400 rounded-br-3xl rounded-tr-3xl rounded-tl-xl text-white">
                    <pre class="whitespace-pre-wrap">${msg}</pre>
                </div>
            </div>
            `
        })
    </script>
</body>

</html>